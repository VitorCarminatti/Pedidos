<div class="col-md-4 col-md-offset-4">
<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @produto.nome %>
</p>

<p>
  <strong>Descricao:</strong>
  <%= @produto.descricao %>
</p>

<p>
  <strong>Estoque:</strong>
  <%= @produto.estoque %>
</p>

<p>
  <strong>Preco:</strong>
  <%= @produto.preco %>
</p>

<p>
  <%= image_tag @produto.foto.url, size: '480x480' %>
</p>

<% if params[:consulta] == 'item_pedido' %>
<%= link_to t('link_to.back'), itens_pedido_path, class: "btn btn-primary"  %>
<% else %>
<%= link_to t('link_to.back'), produtos_path, class: "btn btn-primary"  %>
<% end %>
</div>
