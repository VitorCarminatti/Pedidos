<div class="container">
  <% if notice.present?%>
    <p class="alert alert-success" role="alert" ><%= notice %></p>
  <% end %>
<h1>Pedidos</h1>
<table class="table table-inverse">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>CPF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
    <% if(pedido.user_id == current_user.id && pedido.aberto == false) %>
      <tr>
        <td><%= pedido.id %></td>
        <td><%= pedido.user.nome %></td>
        <td><%= pedido.user.cpf %></td>
        <td><%= link_to t('link_to.show'), pedido, class: 'btn btn-primary' %></td>
        <td><%= link_to t('link_to.destroy'), pedido, method: :delete, data: { confirm: t('alerts.are_you_sure?')}, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
<br>
  <%= paginate @pedidos %>
<%= link_to 'Adicionar Itens', root_path, class: "btn btn-primary pull-left" %>
<script>
$('.alert').fadeOut(2800);
</script>
</div>
