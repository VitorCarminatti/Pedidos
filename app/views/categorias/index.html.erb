<div class="container">
<p id="notice"><%= notice %></p>

<h1>Categorias</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categorias.each do |categoria| %>
      <tr>
        <td><%= categoria.nome %></td>
        <td><%= link_to t('link_to.edit'), edit_categoria_path(categoria), class: "btn btn-primary" %></td>
        <td><%= link_to t('link_to.destroy'), categoria, method: :delete, data: { confirm: t('alerts.are_you_sure?') }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('link_to.new_categoria'), new_categoria_path %>
</div>
